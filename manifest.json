{
    "manifest_version": 3,
    "name": "Bitbucket Query Language",
    "version": "1.0.0",
    "description": "A Chrome extension to developers & students to navigate through Bitbucket repositories using a query language.",
    "icons": {
        "16": "logo16.png",
        "32": "logo32.png",
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "background": {
        "service_worker": "commander.js"
    },
    "omnibox": {
        "keyword": "bql"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "_favicon/*"
            ],
            "matches": [
                "<all_urls>"
            ],
            "extension_ids": [
                "*"
            ],
            "exclude_matches": [
                "./.git/*", "./.idea/*,./plan.md"
            ]
        }
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "js": [
                "solider.js"
            ],
            "css": [
                "solider.css"
            ],
            "matches": [
                "https://bitbucket.org/*"
            ],
            "permissions": [
                "storage",
                "tabs",
                "activeTab"
            ]
        }
    ],
    "permissions": [
        "storage",
        "notifications",
        "tabs"
    ]
}